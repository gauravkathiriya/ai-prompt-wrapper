{
  "name": "ai-prompt-wrapper",
  "version": "1.0.0",
  "description": "A simple TypeScript wrapper around AI APIs (OpenAI and Gemini) with convenient methods for common tasks",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "openai",
    "gemini",
    "llm",
    "ai",
    "wrapper",
    "typescript",
    "prompt",
    "chatgpt",
    "gpt",
    "ai-api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "openai": "^4.20.1"
  },
  "peerDependencies": {},
  "peerDependenciesMeta": {}
}

